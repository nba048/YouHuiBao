<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/view_title" />

    <TextView
        android:id="@+id/tv_model_name"
        android:layout_width="match_parent"
        android:layout_height="35.0dip"
        android:gravity="center"
        android:paddingLeft="10.0dip"
        android:paddingRight="10.0dip"
        android:text="委托历史"
        android:textColor="@color/light_gray"
        android:textSize="18.0dip" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="35.0dip"
            android:gravity="center_vertical|right"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip"
            android:singleLine="true"
            android:text="时间段: "
            android:textColor="@color/light_gray"
            android:textSize="14.0dip" />

        <TextView
            android:id="@+id/tv_time_start"
            android:layout_width="0dip"
            android:layout_height="35.0dip"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip"
            android:singleLine="true"
            android:text="2016-05-25"
            android:textColor="@color/light_gray"
            android:textSize="12.0dip" />

        <TextView
            android:id="@+id/tv_time_end"
            android:layout_width="0dip"
            android:layout_height="35.0dip"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip"
            android:singleLine="true"
            android:text="2016-10-06"
            android:textColor="@color/light_gray"
            android:textSize="12.0dip" />

        <TextView
            android:id="@+id/submit"
            android:layout_width="70.0dip"
            android:layout_height="32.0dip"
            android:layout_marginLeft="15.0dip"
            android:layout_marginRight="10.0dip"
            android:background="@drawable/bg_selector_green_button"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="确定"
            android:textColor="@color/app_white"
            android:textSize="13.0dip" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.yhb.widget.PagerTab
            android:id="@+id/pt_tab_2"
            android:layout_width="match_parent"
            android:layout_height="40dip" />

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_content_base_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

</LinearLayout>