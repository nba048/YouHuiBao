<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@mipmap/bg_get_start"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="160dip"
            android:layout_height="90dip"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="100.0dip"
            android:layout_marginTop="80.0dip"
            android:src="@mipmap/bg" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1.0"
            android:gravity="bottom|center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="50.0dip"
                android:layout_marginLeft="30.0dip"
                android:layout_marginRight="30.0dip"
                android:background="@drawable/bg_edittext_login"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="70.0dip"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5.0dip"
                        android:text="+86"
                        android:textColor="@android:color/white"
                        android:textSize="12.0dip" />
                </LinearLayout>

                <View
                    android:layout_width="0.5dip"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="15.0dip"
                    android:layout_marginTop="15.0dip"
                    android:alpha="0.5"
                    android:background="@android:color/white" />

                <EditText
                    android:id="@+id/et_phone"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginRight="10.0dip"
                    android:layout_weight="1.0"
                    android:background="@null"
                    android:hint="手机号"
                    android:imeOptions="actionNext"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:singleLine="true"
                    android:textColor="@android:color/white"
                    android:textColorHint="#80ffffff"
                    android:textSize="14.0dip" />

                <ImageView
                    android:id="@+id/iv_clear"
                    android:layout_width="20.0dip"
                    android:layout_height="20.0dip"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginRight="15.0dip"
                    android:src="@mipmap/ic_clear_text"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="50.0dip"
                android:layout_marginLeft="30.0dip"
                android:layout_marginRight="30.0dip"
                android:layout_marginTop="25.0dip"
                android:background="@drawable/bg_edittext_login"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="70.0dip"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_confirmation_code_white" />
                </LinearLayout>

                <View
                    android:layout_width="0.5dip"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="15.0dip"
                    android:layout_marginTop="15.0dip"
                    android:alpha="0.5"
                    android:background="@android:color/white" />

                <EditText
                    android:id="@+id/et_confirmation_code"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginRight="5.0dip"
                    android:layout_weight="1.0"
                    android:background="@null"
                    android:digits="1234567890"
                    android:hint="短信验证码……。"
                    android:imeOptions="actionDone"
                    android:inputType="numberDecimal"
                    android:maxLength="6"
                    android:singleLine="true"
                    android:textColor="@android:color/white"
                    android:textColorHint="#80ffffff"
                    android:textSize="14.0dip" />

                <ImageView
                    android:id="@+id/iv_result_code"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingLeft="7.0dip"
                    android:paddingRight="10.0dip"
                    android:textColor="#fff"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/ll_send_code"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingLeft="7.0dip"
                    android:paddingRight="10.0dip">

                    <TextView
                        android:id="@+id/tv_send_code"
                        android:layout_width="75.0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="3.0dip"
                        android:background="@drawable/bg_send_code_white"
                        android:gravity="center"
                        android:paddingBottom="3.0dip"
                        android:paddingLeft="5.0dip"
                        android:paddingRight="5.0dip"
                        android:paddingTop="3.0dip"
                        android:singleLine="true"
                        android:text="获取验证码"
                        android:textColor="@android:color/white"
                        android:textSize="11.0dip" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="50.0dip"
                android:layout_marginLeft="30.0dip"
                android:layout_marginRight="30.0dip"
                android:layout_marginTop="20.0dip"
                android:background="@drawable/bg_edittext_login"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="70.0dip"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_password_white" />
                </LinearLayout>

                <View
                    android:layout_width="0.5dip"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="15.0dip"
                    android:layout_marginTop="15.0dip"
                    android:alpha="0.5"
                    android:background="@android:color/white" />


                <EditText
                    android:id="@+id/et_password2"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="10.0dip"
                    android:layout_weight="1.0"
                    android:background="@null"
                    android:hint="密码"
                    android:imeOptions="actionDone"
                    android:inputType="textPassword"
                    android:maxLength="25"
                    android:singleLine="true"
                    android:textColor="@android:color/white"
                    android:textColorHint="#80ffffff"
                    android:textSize="14.0dip" />

                <ImageView
                    android:id="@+id/iv_clear2"
                    android:layout_width="20.0dip"
                    android:layout_height="20.0dip"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginRight="15.0dip"
                    android:src="@mipmap/ic_clear_text"
                    android:visibility="invisible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="50.0dip"
                android:layout_marginLeft="30.0dip"
                android:layout_marginRight="30.0dip"
                android:layout_marginTop="20.0dip"
                android:background="@drawable/bg_edittext_login"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="70.0dip"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_password_white" />
                </LinearLayout>

                <View
                    android:layout_width="0.5dip"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="15.0dip"
                    android:layout_marginTop="15.0dip"
                    android:alpha="0.5"
                    android:background="@android:color/white" />


                <EditText
                    android:id="@+id/et_password3"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="10.0dip"
                    android:layout_weight="1.0"
                    android:background="@null"
                    android:hint="确认密码"
                    android:imeOptions="actionDone"
                    android:inputType="textPassword"
                    android:maxLength="25"
                    android:singleLine="true"
                    android:textColor="@android:color/white"
                    android:textColorHint="#80ffffff"
                    android:textSize="14.0dip" />

                <ImageView
                    android:id="@+id/iv_clear3"
                    android:layout_width="20.0dip"
                    android:layout_height="20.0dip"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginRight="15.0dip"
                    android:src="@mipmap/ic_clear_text"
                    android:visibility="invisible" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_voice_call"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30.0dip"
                android:layout_marginTop="30.0dip"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvCodeMsg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5.0dip"
                    android:text="请注意短信哟 !!"
                    android:textColor="@android:color/white"
                    android:textSize="12.0dip" />

                <TextView
                    android:id="@+id/tv_confirmation_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="再次验证"
                    android:textColor="@color/main_color"
                    android:textSize="12.0dip"
                    android:visibility="gone" />
            </LinearLayout>

            <Button
                android:id="@+id/tv_confirm"
                android:layout_width="fill_parent"
                android:layout_height="45.0dip"
                android:layout_marginLeft="30.0dip"
                android:layout_marginRight="30.0dip"
                android:layout_marginTop="20.0dip"
                android:background="@drawable/bg_btn_start_register_selector"
                android:clickable="true"
                android:enabled="false"
                android:gravity="center"
                android:text="验证"
                android:textColor="@android:color/white"
                android:textSize="18.0dip" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50.0dip"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <View
                    style="@style/divide_dark"
                    android:layout_weight="1.0"
                    android:alpha="0.2"
                    android:background="@color/main_color" />

                <TextView
                    android:layout_width="50.0dip"
                    android:layout_height="wrap_content"
                    android:alpha="0.6"
                    android:gravity="center"
                    android:text="OR"
                    android:textColor="@color/main_color"
                    android:textSize="14.0dip" />

                <View
                    style="@style/divide_dark"
                    android:layout_weight="1.0"
                    android:alpha="0.2"
                    android:background="@color/main_color" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10.0dip"
                android:layout_marginTop="10.0dip"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_user_protocol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20.0dip"
                    android:drawableLeft="@mipmap/ic_protocol_checked"
                    android:drawablePadding="5.0dip"
                    android:gravity="center"
                    android:padding="10.0dip"
                    android:text="用户协议"
                    android:textColor="@android:color/white"
                    android:textSize="13.0dip" />

                <TextView
                    android:id="@+id/tv_password_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20.0dip"
                    android:padding="10.0dip"
                    android:text="返回登录"
                    android:textColor="@android:color/white"
                    android:textSize="13.0dip" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>

