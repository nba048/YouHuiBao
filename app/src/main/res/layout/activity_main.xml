<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:windowSoftInputMode="stateVisible|adjustResize">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/fl_main_content"
            android:layout_width="match_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1.0" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:background="@color/main_divide" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/app_white">

            <LinearLayout
                android:id="@+id/ll_tab"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_tab_1"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/iv_tab_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:paddingBottom="3.0dip"
                        android:paddingLeft="10.0dip"
                        android:paddingRight="10.0dip"
                        android:paddingTop="5.0dip"
                        android:src="@drawable/main_tab_1_selector" />

                    <TextView
                        android:id="@+id/tv_tab_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="5.0dip"
                        android:text="频繁"
                        android:textColor="#ff797979"
                        android:textSize="11.0dip" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_tab_2"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_tab_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:paddingBottom="3.0dip"
                        android:paddingLeft="10.0dip"
                        android:paddingRight="10.0dip"
                        android:paddingTop="5.0dip"
                        android:src="@drawable/main_tab_2_selector" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="5.0dip"
                        android:text="市场"
                        android:textColor="#ff797979"
                        android:textSize="11.0dip" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_tab_3"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/iv_tab_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:paddingBottom="3.0dip"
                            android:paddingLeft="10.0dip"
                            android:paddingRight="10.0dip"
                            android:paddingTop="5.0dip"
                            android:src="@drawable/main_tab_3_selector" />

                        <View
                            android:id="@+id/v_contacts_point"
                            android:layout_width="10.0dip"
                            android:layout_height="10.0dip"
                            android:layout_alignRight="@+id/iv_tab_3"
                            android:layout_alignTop="@+id/iv_tab_3"
                            android:layout_margin="5.0dip"
                            android:background="@drawable/bg_contacts_count"
                            android:visibility="invisible" />

                        <TextView
                            android:id="@+id/tv_contacts_count"
                            android:layout_width="22.0dip"
                            android:layout_height="22.0dip"
                            android:layout_alignRight="@+id/iv_tab_3"
                            android:layout_alignTop="@+id/iv_tab_3"
                            android:layout_margin="3.0dip"
                            android:background="@drawable/bg_contacts_count"
                            android:gravity="center"
                            android:text="\ 9"
                            android:textColor="@color/app_white"
                            android:textSize="10.0dip"
                            android:visibility="invisible" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/iv_tab_3"
                        android:layout_centerInParent="true"
                        android:layout_marginBottom="5.0dip"
                        android:text="快讯"
                        android:textColor="#ff797979"
                        android:textSize="11.0dip" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_tab_4"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1.0">

                        <ImageView
                            android:id="@+id/iv_tab_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:paddingBottom="3.0dip"
                            android:paddingLeft="10.0dip"
                            android:paddingRight="10.0dip"
                            android:paddingTop="5.0dip"
                            android:src="@drawable/main_tab_4_selector" />

                        <View
                            android:id="@+id/v_my_point"
                            android:layout_width="10.0dip"
                            android:layout_height="10.0dip"
                            android:layout_alignRight="@+id/iv_tab_4"
                            android:layout_alignTop="@+id/iv_tab_4"
                            android:layout_margin="5.0dip"
                            android:background="@drawable/bg_contacts_count"
                            android:visibility="invisible" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/iv_tab_4"
                        android:layout_centerInParent="true"
                        android:layout_marginBottom="5.0dip"
                        android:text="我的"
                        android:textColor="#ff797979"
                        android:textSize="11.0dip" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:id="@+id/v_announce"
        android:layout_width="50.0dip"
        android:layout_height="50.0dip" />

    <TextView
        android:id="@+id/tv_interview_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        android:layout_marginBottom="52.0dip"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:gravity="center"
        android:lines="1"
        android:padding="10.0dip"
        android:text=""
        android:textColor="@android:color/white"
        android:textSize="14.0dip" />

</RelativeLayout>