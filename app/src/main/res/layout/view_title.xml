<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fl_parent"
    android:layout_width="fill_parent"
    android:layout_height="50.0dip"
    android:background="@color/main_color">

    <ImageView
        android:id="@+id/title_iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|left"
        android:padding="8.0dip"
        android:src="@mipmap/ic_title_back_arrow" />

    <TextView
        android:id="@+id/title_tv_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="100.0dip"
        android:layout_marginRight="100.0dip"
        android:gravity="center"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/app_white"
        android:textSize="16.0dip" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|right"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/title_iv_btn_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8.0dip" />

        <ImageView
            android:id="@+id/title_iv_btn_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8.0dip" />

        <TextView
            android:id="@+id/title_tv_btn_3"
            android:layout_width="wrap_content"
            android:layout_height="50.0dip"
            android:background="@drawable/bg_selector_green"
            android:gravity="center"
            android:padding="8.0dip"
            android:text=""
            android:textColor="@color/app_white"
            android:textSize="14dip" />
    </LinearLayout>

</FrameLayout>