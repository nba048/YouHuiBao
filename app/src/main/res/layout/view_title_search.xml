<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_title_layout"
    android:layout_width="fill_parent"
    android:layout_height="50.0dip"
    android:background="@color/main_color"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/title_iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|left"
        android:padding="8.0dip"
        android:src="@mipmap/ic_title_back_arrow" />

    <LinearLayout
        android:id="@+id/ll_title_center"
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_margin="5dip"
        android:layout_weight="1"
        android:background="@drawable/bg_edittext_login"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <AutoCompleteTextView
            android:id="@+id/tv_content"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="8dp"
            android:layout_weight="1.0"
            android:background="@null"
            android:completionThreshold="1"
            android:hint="任意内容"
            android:imeOptions="actionDone"
            android:inputType="textAutoComplete"
            android:maxLength="16"
            android:padding="5dp"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textColorHint="#80ffffff"
            android:textSize="14.0dip" />

        <ImageView
            android:id="@+id/title_iv_clear"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center|right"
            android:layout_marginRight="15dip"
            android:background="@mipmap/ic_clear_text"
            android:padding="8.0dip" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="50dip"
        android:layout_height="match_parent"
        android:layout_gravity="center|right"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/title_iv_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:background="@mipmap/ic_search"
            android:padding="8.0dip" />
    </LinearLayout>
</LinearLayout>