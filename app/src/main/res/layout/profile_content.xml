<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_white">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_numbers"
            android:layout_width="fill_parent"
            android:layout_height="80.0dip"
            android:background="@color/app_white"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/rl_geek_interests_number"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_geek_interests_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10.0dip"
                        android:src="@mipmap/ic_interests_number" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_geek_interests_number"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_marginBottom="2.0dip"
                            android:layout_weight="1.0"
                            android:gravity="bottom"
                            android:text="\ 0"
                            android:textColor="@color/light_gray"
                            android:textSize="16.0dip" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_marginTop="2.0dip"
                            android:layout_weight="1.0"
                            android:gravity="top"
                            android:text="收藏"
                            android:textColor="@color/light_gray"
                            android:textSize="14.0dip" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="1.0dip"
                android:layout_height="fill_parent"
                android:layout_marginBottom="14.0dip"
                android:layout_marginTop="14.0dip"
                android:background="@drawable/bg_user_info_hidden_line_2" />

            <RelativeLayout
                android:id="@+id/rl_geek_online_remind_number"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_geek_online_remind_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10.0dip"
                        android:src="@mipmap/ic_online_remind" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_geek_online_remind_number"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_marginBottom="2.0dip"
                            android:layout_weight="1.0"
                            android:gravity="bottom"
                            android:text="\ 0"
                            android:textColor="@color/light_gray"
                            android:textSize="16.0dip" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_marginTop="2.0dip"
                            android:layout_weight="1.0"
                            android:gravity="top"
                            android:text="提醒"
                            android:textColor="@color/light_gray"
                            android:textSize="14.0dip" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="1.0dip"
                android:layout_height="fill_parent"
                android:layout_marginBottom="14.0dip"
                android:layout_marginTop="14.0dip"
                android:background="@drawable/bg_user_info_hidden_line_2" />

            <RelativeLayout
                android:id="@+id/rl_geek_contacts_number"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_geek_contacts_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10.0dip"
                        android:src="@mipmap/ic_contacts_number" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_geek_contacts_number"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_marginBottom="2.0dip"
                            android:layout_weight="1.0"
                            android:gravity="bottom"
                            android:text="\ 0"
                            android:textColor="@color/light_gray"
                            android:textSize="16.0dip" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_marginTop="2.0dip"
                            android:layout_weight="1.0"
                            android:gravity="top"
                            android:text="沟通"
                            android:textColor="@color/light_gray"
                            android:textSize="14.0dip" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="10.0dip"
            android:background="@color/bg_common" />

        <RelativeLayout
            android:id="@+id/rl_pre_interview"
            style="@style/relative_layout_setting"
            android:layout_height="60.0dip">

            <TextView
                android:id="@+id/tv_interview"
                style="@style/text_left_user_tab"
                android:drawableLeft="@mipmap/wait_interview"
                android:drawablePadding="12.0dip"
                android:drawableStart="@mipmap/wait_interview"
                android:text="item1" />

            <View
                android:id="@+id/red_point_interview"
                android:layout_width="10.0dip"
                android:layout_height="10.0dip"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_interview"
                android:background="@drawable/bg_contacts_count" />

            <TextView
                android:id="@+id/tv_interview_count"
                android:layout_width="22.0dip"
                android:layout_height="22.0dip"
                android:layout_centerVertical="true"
                android:layout_margin="3.0dip"
                android:layout_toLeftOf="@+id/tv_view_arrow"
                android:background="@drawable/bg_contacts_count"
                android:ellipsize="end"
                android:gravity="center"
                android:textColor="@color/app_white"
                android:textSize="10.0dip" />

            <ImageView
                android:id="@+id/tv_view_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10.0dip"
                android:background="@mipmap/ic_arrow_default" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_geek_tools"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="fill_parent"
                android:layout_height="10.0dip"
                android:background="@color/bg_common" />

            <RelativeLayout
                android:id="@+id/rl_scanner"
                style="@style/relative_layout_setting"
                android:layout_height="60.0dip">

                <TextView
                    style="@style/text_left_user_tab"
                    android:drawableLeft="@mipmap/ic_scan_login"
                    android:drawablePadding="12.0dip"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="item2" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10.0dip"
                    android:background="@mipmap/ic_arrow_default" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_resume_upload_container"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dip"
                    android:layout_marginLeft="12.0dip"
                    android:layout_marginRight="12.0dip"
                    android:background="@color/main_divide" />

                <LinearLayout
                    android:id="@+id/ll_resume_upload"
                    style="@style/Item_F3_container"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12.0dip"
                        android:layout_weight="1.0"
                        android:drawableLeft="@mipmap/ic_upload_resume"
                        android:drawablePadding="12.0dip"
                        android:gravity="center_vertical"
                        android:text="item3"
                        android:textColor="@color/light_gray"
                        android:textSize="16.0dip" />

                    <TextView
                        android:id="@+id/tv_resume_upload"
                        style="@style/text_right_user_tab" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="10.0dip"
                android:background="@color/bg_common" />

            <LinearLayout
                android:id="@+id/ll_score_task"
                style="@style/Item_F3_container"
                android:orientation="horizontal">

                <TextView
                    style="@style/Item_F3_Text_Left"
                    android:drawableLeft="@mipmap/ic_mission"
                    android:text="item4" />

                <TextView
                    style="@style/text_right_user_tab"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="item4" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:layout_marginLeft="12.0dip"
                android:layout_marginRight="12.0dip"
                android:background="@color/main_divide" />

            <LinearLayout
                android:id="@+id/ll_achievement"
                style="@style/Item_F3_container"
                android:orientation="horizontal">

                <TextView
                    style="@style/Item_F3_Text_Left"
                    android:drawableLeft="@mipmap/ic_achievement_white"
                    android:text="item5" />

                <TextView
                    style="@style/text_right_user_tab"
                    android:text="" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_my_wallet"
                style="@style/Item_F3_container"
                android:orientation="vertical">

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dip"
                    android:layout_marginLeft="12.0dip"
                    android:layout_marginRight="12.0dip"
                    android:background="@color/main_divide" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/Item_F3_Text_Left"
                        android:drawableLeft="@mipmap/ic_my_wallet"
                        android:text="item6" />

                    <TextView
                        android:id="@+id/tv_wallet_balance"
                        style="@style/text_right_user_tab"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_coupon"
                style="@style/Item_F3_container"
                android:orientation="vertical">

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dip"
                    android:layout_marginLeft="12.0dip"
                    android:layout_marginRight="12.0dip"
                    android:background="@color/main_divide" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/Item_F3_Text_Left"
                        android:drawableLeft="@mipmap/ic_coupon"
                        android:text="item7" />

                    <TextView
                        android:id="@+id/tv_coupon_count"
                        style="@style/text_right_user_tab"
                        android:ellipsize="end"
                        android:singleLine="true" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="10.0dip"
                android:background="@color/bg_common" />

            <LinearLayout
                android:id="@+id/ll_my_item"
                style="@style/Item_F3_container"
                android:orientation="horizontal">

                <TextView
                    style="@style/Item_F3_Text_Left"
                    android:drawableLeft="@mipmap/ic_tool_package"
                    android:text="item8" />

                <TextView
                    android:id="@+id/tv_geek_my_tools"
                    style="@style/text_right_user_tab"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="" />
            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="10.0dip"
            android:background="@color/bg_common" />

        <LinearLayout
            android:id="@+id/ll_geek_customization"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_common"
            android:minHeight="10.0dip"
            android:orientation="vertical" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:alpha="0.0"
            android:background="@color/app_green"
            android:gravity="center"
            android:textColor="@color/app_white"
            android:textSize="16.0dip" />

        <ImageView
            android:id="@+id/iv_general_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="8.0dip"
            android:src="@mipmap/ic_general_settings" />
    </RelativeLayout>

</RelativeLayout>